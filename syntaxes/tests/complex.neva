components {
    pub Doer<T float>(x int) (z T) {
        nodes {
            abstractNode IMyInterface
            printer std_pkg.Printer
            reader elsewhere.Reader<str>
        }
        net {
            in.x -> printer.in.v
            printer.out.v -> {
                reader.in.v
                out.z
            }
        }
    }

